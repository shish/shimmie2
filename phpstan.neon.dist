parameters:
  level: 8
  paths:
    - core
    - ext
    - tests
    - themes
  dynamicConstantNames:
    - DEBUG
    - TRUSTED_PROXIES
    - TIMEZONE
    - BASE_HREF
    - TRACE_FILE
    - UNITTEST
  ignoreErrors:
    -
      message: '#Function .* is unsafe to use.*$#'
includes:
  - vendor/thecodingmachine/phpstan-safe-rule/phpstan-safe-rule.neon
services:
  -
    class: Shimmie2\Tests\GenericStringTypeNodeResolverExtension
    tags:
      - phpstan.phpDoc.typeNodeResolverExtension
